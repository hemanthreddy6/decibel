// Print statements
print "hello world!";

// Functions
f <- (a:long, b:int):int {
    if (a > b) {
        return a;
    } otherwise {
        return b;
    }
} ;
f1 <- (a:long, b:int):int {
    if (a < b) {
        return a;
    } otherwise {
        return b;
    }
} ;
// Function variables can be determined at runtime
f2 <- f;
if 100 > 20 {
    f2 = f1;
}
// If it's f1, 10 will be printed, otherwise 100
print f2(100, 10);

// Hz gets turned into semitones
print 1000hz;

// Loop statement and conditionals
a <- 0;
loop 10 {
    a += 1;
    if a > 8 {
        print - a;
    } or a > 6 {
        print a * 100;
    } or a > 4 {
        print a - 100;
    } otherwise {
        print a;
    }
}

// Loop until statement
loop until a==0 {
    print a;
    a -= 1;
}

// Audio functions
